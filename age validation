//js

  const mytext =document.getElementById("mytext");
  const mysubmit= document.getElementById("mysubmit");
  const resultElement=document.getElementById("resultElement");
  let age=0;


  
       mysubmit.onclick = function(){
        age=mytext.Value;
        age=Number(age);

        
  if(age>=100){
    
    resultElement.textContent=`yo u r good`;
}

else if(age==0){
    
    resultElement.textContent=`you cant enter`;

 }


 else if(age >=18){
   
    resultElement.textContent=`u r elegible`;

 }

 else if(age<0){
 
    resultElement.textContent=`youage cannot be below zero`;

 }

 
    
    
else{
    console.log("you r not ");
    resultElement.textContent=`you r not`;
}
       }


//html

